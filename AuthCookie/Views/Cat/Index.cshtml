@model IEnumerable<AuthCookie.Models.Cat>

@{
    ViewData["Title"] = "Cat Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>From My Pet Store </p>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => cat.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => cat.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-small btn-success" >
                            <img src="~/img/edit.svg" alt="Edit Image" class="icon_img" />
                            Edit
                        </a> |
                        <a asp-action="Details" asp-route-id="@cat.Id" class="btn btn-small btn-primary">
                            <img src="~/img/detail.svg" alt="Detail Image" class="icon_img" />
                            Detail
                        </a> |
                        <a asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-small btn-danger">
                            <img src="~/img/delete.svg" alt="Delete Image" class="icon_img" />
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
