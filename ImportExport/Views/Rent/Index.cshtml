@model IEnumerable<ImportExport.Models.VwCusMvRent>;

@{
    ViewData["Title"] = "Movie";
    int index = 1;
}

<div class=" d-flex justify-content-between align-items-center my-4 ">
    <h2>Customer Rent</h2>
    <div class="btn-container">
        <button  class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#import-modal"> Import </button>
        <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#export-modal">Export</button>
    </div>
</div>

<table class="table table-striped" id="tbl-movie-rented">
    <thead class="bg-dark text-white">
        <tr>
            <th> No  </th>
            <th>Full Name </th>
            <th>Address</th>
            <th>Movie Rented</th>
            <th>Salutation</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
       
        @foreach (var item in Model)
        {
            
            <tr>
                <th>@(index)</th>
            <th>
                    @Html.DisplayFor(modelItem => item.FullName)
            </th>
            <th>
                    @Html.DisplayFor(modelItem => item.Address)
            </th>
            <th>
                    @Html.DisplayFor(modelItem => item.Title)
            </th>
            <th>
                    @Html.DisplayFor(modelItem => item.Salutation)
            </th>
            <th>
                    <a href="javascript:void(0);" onclick="confirmDelete('@Url.Action("Delete", new { id = item.RentId })');" class="btn btn-danger">Delete</a>
            </th>
        </tr>
            index++;
        }
    </tbody>
</table>

<!--Import Modal -->
<div class="modal fade" id="import-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">File Upload</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" id="uploadForm" asp-controller="Rent" asp-action="SingleFileUpload" enctype="multipart/form-data">

                    <dl>
                        <dt>
                            <!-- <label asp-for="FileUpload.FormFile" class="form-label">Please Upload File ( .csv, .xlsx )</label>-->
                            <label for="formFile" class="form-label">Please Upload File ( .csv, .xlsx )</label>
                        </dt>
                        <dd>

                            <!--<input asp-for="FileUpload.FormFile" type="file">-->
                            <input class="form-control" type="file" name="SingleFile" id="formFile" accept=".xlsx,.csv">
                            <!--<span asp-validation-for="FileUpload.FormFile"></span>-->
                            <div asp-validation-summary="All" class="text-danger err-msg"></div>
                        </dd>
                    </dl>
                    <div class="text-start">
                        <input name="Upload" class="btn btn-primary" type="submit" value="Upload" />
                        <button type="button"  class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!--Export Modal -->
<div class="modal fade" id="export-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Export As</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="importForm">
                    <select class="form-select" id="select-format">
                        <option value="csv">Comma Separated Values</option>
                        <option value="xlsx">Excel Spreadsheet</option>
                    </select>
                    <label for="file-name" class="form-label">Save As</label>
                    <input type="text" name="name" id="file-name" class="form-control"/>
                </form>
            </div>
            <div class="modal-footer">
                <button name="Upload" class="btn btn-primary" id="export-btn" data-bs-dismiss="modal">Export</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tbl-movie-rented').DataTable();

            $('#uploadForm').submit(function (e) {
                var fileInput = $('#formFile')[0];
                var filePath = fileInput.value;
                var allowedExtensions = /(\.xlsx|\.csv)$/i;

                if (!allowedExtensions.exec(filePath)) {
                    $(".err-msg").html("Please upload a file with .xlsx or .csv extension.")
                    fileInput.value = '';
                    e.preventDefault();
                    return false;
                }
                return true;
            });
            
                $("#export-btn").click(function(){
                     let format = $( "#select-format" ).val();
                     let filename = $("#file-name").val() || "";
                     console.log("format", format);
                     switch(format){
                                case 'csv' :
                                    window.location.href = '@Url.Action("CsvExport")' + '?name=' + encodeURIComponent(filename);
                                    
                                     Swal.fire({
                                      title: "Exported CSV Successfull",
                                      text: "Your File is ready to view with format CSV",
                                      icon: "success"
                                    });
                                    break;
                                case 'xlsx' :
                                    window.location.href = '@Url.Action("XlsxExport")'+ '?name=' + encodeURIComponent(filename);
                                     Swal.fire({
                                      title: "Exported XLSX Successfull",
                                      text: "Your File is ready to view with format XLSX",
                                      icon: "success"
                                    });
                                    break;
                                default : break;
                     }
                })
        });

        function confirmDelete(url){
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to recover this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = url;
                }
            });
        }
    </script>
}